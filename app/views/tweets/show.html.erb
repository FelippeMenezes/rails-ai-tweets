<div class="container bg-primary text-white mt-5">
    <div class="d-flex justify-content-end">
        <%= link_to new_tweet_path, class: "btn btn-outline-light my-2" do %>
            Create another tweet
        <% end %>
    </div>
    <hr>
    <strong>Tweet (<%= @tweet.shortened.size %>):</strong>
    <blockquote class="blockquote"><%= @tweet.shortened %></blockquote>
    <hr>
    <strong>Original (<%= @tweet.long.size %>): </strong>
    <%= simple_format @tweet.long %>
    <hr>
    <%= link_to new_tweet_path, class: "btn btn-outline-light mb-4" do %>
        Create another tweet
    <% end %>
</div>